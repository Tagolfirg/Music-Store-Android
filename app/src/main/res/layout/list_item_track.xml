<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/colorPrimaryDark" />

    <RelativeLayout
        android:id="@+id/track_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_line_tile_height"
        android:paddingEnd="@dimen/default_space"
        android:paddingStart="@dimen/default_space">

        <TextView
            android:id="@+id/track_list_track_number"
            android:layout_width="@dimen/max_track_number_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/track_list_track_duration"
            android:layout_width="@dimen/max_track_duration_width"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/track_list_track_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/track_list_track_number"
            android:layout_toStartOf="@id/track_list_track_duration"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="@dimen/default_space"
            android:paddingStart="@dimen/default_space" />

    </RelativeLayout>

</LinearLayout>