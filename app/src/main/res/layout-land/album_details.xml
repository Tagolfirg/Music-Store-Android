<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_space"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/album_detail_artwork"
        android:layout_width="@dimen/album_details_artwork_size"
        android:layout_height="@dimen/album_details_artwork_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_space"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@string/album_image" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/album_detail_artwork"
        android:layout_marginStart="@dimen/default_space">

        <TextView
            android:id="@+id/album_detail_collection_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/album_detail_by"
            android:layout_marginBottom="@dimen/default_space"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAlignment="center"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/album_detail_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/album_detail_collection_name"
            android:layout_marginTop="@dimen/default_space"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:text="@string/by"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/album_detail_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_detail_by"
            android:layout_marginBottom="@dimen/default_space"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="center"
            android:textSize="@dimen/large_text_size" />

        <View
            android:id="@id/divider_view"
            android:layout_width="@dimen/flat"
            android:layout_height="@dimen/flat"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/album_detail_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_detail_artist"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@id/divider_view"
            android:layout_marginTop="@dimen/default_space"
            android:textAlignment="center"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/album_detail_explicitness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_detail_artist"
            android:layout_alignStart="@id/divider_view"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/default_space"
            android:textAlignment="center"
            android:textSize="@dimen/medium_text_size" />

    </RelativeLayout>

</RelativeLayout>